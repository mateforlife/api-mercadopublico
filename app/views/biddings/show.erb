<p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-6" style="margin-left: 350px;">
      <div class="box-body">
        <h3 class="" style="margin-bottom: 1em;">Detalle Licitación</h3>
          <div class="box box-primary">
            <div class="box-body box-profile">
              <h3 class="profile-username text-center"><%= @bidding[:Comprador][:NombreOrganismo] %></h3>

              <p class="text-muted text-center"><%= @bidding[:Descripcion] %></p>

              <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                  <b>Estado</b> <a class="pull-right"><%= bidding_states(@bidding[:CodigoEstado]) %></a>
                </li>
                <li class="list-group-item">
                  <b>Monto Estimado</b> <a class="pull-right"><%= number_to_currency(@bidding[:MontoEstimado].to_i, unit: 'CLP$', delimiter: '.', precision: 0) %></a>
                </li>
                <li class="list-group-item">
                  <b>Fecha Cierre</b> <a class="pull-right"><%= @bidding[:Fechas][:FechaCierre].to_date.strftime('%d-%m-%Y') %> (<%= (@bidding[:Fechas][:FechaCierre].to_date - Date.today).to_i %> Días) </a>
                </li>
                <li class="list-group-item">
                  <b>Código Externo</b> <a class="pull-right"><%= @bidding[:CodigoExterno] %></a>
                </li>
                <li class="list-group-item">
                  <b>Nombre</b> <a class="pull-right"><%= @bidding[:Nombre] %></a>
                </li>
                <li class="list-group-item">
                  <b>Rut</b> <a class="pull-right"><%= @bidding[:Comprador][:RutUnidad] %></a>
                </li>
                <li class="list-group-item">
                  <b>Responsable de Pago</b> <a class="pull-right"><%= @bidding[:NombreResponsablePago] %> </a>
                </li>
                <li class="list-group-item">
                  <b>Mail Responsable de Pago</b> <a class="pull-right"><%= @bidding[:EmailResponsablePago] %> </a>
                </li>
                <li class="list-group-item">
                  <b>Responsable de Contrato</b> <a class="pull-right"><%= @bidding[:NombreResponsableContrato] %> </a>
                </li>
                <li class="list-group-item">
                  <b>Mail Responsable de Contrato</b> <a class="pull-right"><%= @bidding[:EmailResponsableContrato] %> </a>
                </li>
                <li class="list-group-item">
                  <b>Fono Responsable de Contrato</b> <a class="pull-right"><%= @bidding[:FonoResponsableContrato] %> </a>
                </li>
                <li class="list-group-item">
                  <b>Dirección</b> <a class="pull-right"><%= @bidding[:Comprador][:DireccionUnidad] %></a>
                </li>
                <li class="list-group-item">
                  <b>Comuna</b> <a class="pull-right"><%= @bidding[:Comprador][:ComunaUnidad] %></a>
                </li>
                <li class="list-group-item">
                  <b>Región</b> <a class="pull-right"><%= @bidding[:Comprador][:RegionUnidad] %></a>
                </li>
              </ul>

              <a target="_blank" href="http://www.mercadopublico.cl/Portal/Modules/Menu/Menu.aspx" class="btn btn-primary btn-block"><b>Ir a Mercado Publico >> </b></a>
            </div>
            <!-- /.box-body -->
          </div>
      </div>
    </div>
  </div>
