<p id="notice"><%= notice %></p>

<h1>Palabras Clave</h1>
<%= link_to 'Nueva Palabra Clave', new_key_word_path, class: 'btn btn-primary', style: 'color: white;' %>
<div class="box-body">
  <div class="table-responsive">
    <table class="table no-margin text-center">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @key_words.each do |key_word| %>
          <tr>
            <td><%= key_word.name %></td>
            <td><%= link_to 'Editar', edit_key_word_path(key_word) %></td>
            <td><%= link_to 'Eliminar', key_word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>


